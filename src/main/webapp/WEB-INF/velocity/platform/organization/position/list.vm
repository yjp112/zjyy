<div class="ui-layout-center" id="subMain">
	<div class="ui-layout-center">
		<table id="plat_org_position_datalist" class="fn-hide"></table>
	</div>
	<div class="ui-layout-north">
		<form id="plat_org_position_search_form" class="ui-form ui-form-search fn-clear" style="margin-top:0;">
			<input type="hidden" name="departmentId" value="" />
			<div class="ui-form-search-left" style="width:600px">
				<div class="ui-form-item">
					<label class="ui-label">岗位编码：</label>
		    		<input class="ui-input" type="text" name="code" value="$!{condition.code}" />
		    	</div>
		    	<div class="ui-form-item">
					<label class="ui-label">岗位名称：</label>
		    		<input class="ui-input" type="text" name="name" value="$!{condition.name}" />
		    	</div>
	    	</div>
	    	<div class="ui-form-search-right">
				<button type="submit" class="btn btn-primary"><i class="iconfont icon-search"></i> 查询</button>
			</div>
		</form>
	</div>
</div>
<div class="ui-layout-north">
	#bread_crumbs('PLAT_ORG_POSITION')
</div>
<div class="ui-layout-west">
	<div id="plat_org_position_box" class="ui-box">
      <div class="ui-box-head">部门簇</div>
      <div class="ui-box-container">
          <ul id="plat_org_position_tree" class="ztree"></ul>
      </div>
    </div>
</div>
<script type="text/javascript">
	var plat_org_position_datagrid, plat_org_position_tree;
	$(function(){
		if(_inner_layout) _inner_layout.destroy();
		var _center_main_layout = $("#centerMain").layout({
			defaults : {
				resizable : false,
				closable : false,
				spacing_open : 5
			},
			west : {
				size : 250,
				resizable : true,
				resizerTip : "移动改变大小",
				closable : true,
				togglerTip_open : "隐藏",
				togglerTip_closed : "打开"
			},
			onresize_end : function(){
				$("#plat_org_position_box").box("resize");
			}
		});
		_content_layouts.push(_center_main_layout);
		_inner_layout = $("#subMain").layout({
			defaults : {
				resizable : false,
				closable : false,
				spacing_open : 5
			},
			onresize_end : function(){
				$("#plat_org_position_datalist").datagridResize({width:_inner_layout.state.center.innerWidth,height:_inner_layout.state.center.innerHeight});
			}
		});
		
		$("#plat_org_position_box").box({
			width : function(){return _center_main_layout.state.west.innerWidth;},
			height : function(){return _center_main_layout.state.west.innerHeight;}
		});
		
		## 菜单树
		var setting = {
			callback: {
				onClick : function(event, treeId, treeNode) {
					$("#plat_org_position_search_form input[name='departmentId']").val(treeNode.id);
					plat_org_position_datagrid.flexReload();
				}
			}
		};
		var nodes = $!{departmentJson};
		
		plat_org_position_tree = $.fn.zTree.init($("#plat_org_position_tree"), setting, nodes);
		plat_org_position_tree.expandAll(true);
		
		
		## datagrid
		plat_org_position_datagrid = $("#plat_org_position_datalist").datagrid({
			url: '$!{rc.contextPath}/platform/organization/position/list',
			dataType: "json",
			method: "POST",
			singleSelected : true,
			striped : false,
			height:  _inner_layout.center.state.innerHeight,
			width :  _inner_layout.center.state.innerWidth,
			showOrderNumber : true,
			useRp : true,
			usepager: true,
    		rpOptions: [10, 20, 40, 60],
    		pageSize: 20,
    		searchFormId : "plat_org_position_search_form",
    		searchCallback : function(datagrid){
    		},
			colModel : [
				{"display":"序号"},
				{"name":"id","hide":true},
				{"display":"岗位编码","name":"code","sortable":true,"orderField":"CODE",width:150,onclick:function(row,a){
					$.dialogs.normalDialog("plat_org_position_view_dlg", "$!{rc.contextPath}/platform/organization/position/view?position.id=" + row.id, function(dlg,btn){
						return false;
					},680,200,"查看岗位信息",null,false,"关闭");
				}},
				{"display":"岗位名称","name":"name",width:150},
				{"display":"所属部门","name":"department.name",width:150},
				{"display":"备注","name":"description",width:150}
			],
			buttons : [
				#data_grid_buttons('PLAT_ORG_POSITION')#end
			]
		});
	});
</script>