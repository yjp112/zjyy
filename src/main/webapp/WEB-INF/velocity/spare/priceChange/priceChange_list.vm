</head>
<body>
  <div class="ui-layout-west" style="border-right:solid 1px #e1e5e6;" id="leftTreeWrap">
			<div class="ui-layout-north">
				<div class="k-header k-grid-toolbar" style="padding-left:10px;">备件类别</div>
			</div>
      <div class="ui-layout-center">
  		  <ul id="geoAreaTree" class="ztree"></ul>
      </div>
  </div>

  <div class="ui-layout-center" id="subMain">
    <div class="ui-layout-north">
    	<form class="ui-form" id='queryForm'>
			<input id="spareCategoryId" type="hidden" name="spareCategoryId" value="$!spare.spareCategoryId" />
        <table width="100%">
          <tr>
            <td>
              <table class="ui-search-table">
                <tr>
                  <td class="ui-search-name first">备件编码：</td>
                  <td class="ui-search-c">
					  <input class="k-textbox" type="text" name="spareCode" value="$!priceChange.spareCode">
                  </td>
                  <td class="ui-search-name">备件名称：</td>
                  <td class="ui-search-c">
					 <input class="k-textbox" type="text" name="spareName" value="$!priceChange.spareName">
                  </td>
                </tr>
              </table>
            </td>
            <td width="180" valign="top" style="padding-top:4px;">
              <button type="submit" class="hc_btn k-primary" id="queryBtn"><i class="fa fa-search"></i>查询</button>
              <button type="reset" class="hc_btn" id="resetBtn" onclick="cancelLeftTreeSelected();"><i class="fa fa-refresh"></i>重置</button>
            </td>
            <td></td>
          </tr>
        </table>
    	</form>
    </div>
  	<div class="ui-layout-center">
  	  <div id="grid"></div> 
    </div>
  </div>
   #parse("index/_footer.vm")  
<script type="text/javascript">
  var _iframe_layout, _left_layout, _inner_layout;
	$(document).ready(function(){
    _iframe_layout = $('body').layout({
      defaults: {
        resizable: false,
        closable: false,
        spacing_open: 5
      },
      west: {
        size: 0.18
      }
    });

    _left_layout = $("#leftTreeWrap").layout({
      defaults: {
        resizable: false,
        closable: false,
        spacing_open: 0
      }
    });

    _inner_layout = $("#subMain").layout({
      defaults: {
        resizable: false,
        closable: false,
        spacing_open: 0
      },
      center: {
          onresize_end: function () {
              var grid = $("#grid").data("kendoGrid");
              grid.resize();
          }
      }
    })

    $('#resetBtn').click(function(){
      $("#queryForm :text").val('');  
    });

	$('.iconfont','.ui-form-pick').each(function(){
      $(this).click(function(){
      	$('#treeId').val('');
      	$('#selectBlock').hide();
      })
    })
	
		//列表
    quick_datagrid("#grid", "#queryForm", "$!{rc.contextPath}/spare/priceChange/list?_t="+new Date().getTime(),
		[{
              field: "id",
              hidden: true
          }, {
              field: "spareCode",
              title: "备件编码",
              headerAttributes: {"class": "k-grid-text"},
              attributes: {"class": "k-grid-text"},
              sortable: false,
			   template:"<a href=\"javascript:void(0)\" title=\"查看#: data.spareCode #的详细信息\" onclick=\"quick_dialog('priceChange_add_dlg','查看#:data.spareCode #的信息','$!{rc.contextPath}/spare/priceChange/edit?viewOnly=true&id=#: data.id #',750,350)\">#: data.spareCode #</a>"
          }, {
              field: "spareName",
              title: "备件名称",
              headerAttributes: {"class": "k-grid-text"},
		  	  #*attributes: {"class": "k-grid-text"},*#
          	  attributes: {     
  		  		title:"#: data.spareName==null? '':data.spareName #",
  				"class": "k-grid-text k-grid-nowrap"
		  	  },
              sortable: false
              
          }, {
              field: "spareCategoryName",
              title: "备件类别",
              headerAttributes: {"class": "k-grid-text"},
              attributes: {"class": "k-grid-text"},
              sortable: false
              
          }, {
              field: "oldPrice",
              title: "标准单价(元)",
              headerAttributes: {"class": "k-grid-num"},
              attributes: {"class": "k-grid-num"},
              template:function(dataItem){
            	  if(dataItem.oldPrice != null)
            		  return fNum2(dataItem.oldPrice);
            	  else return '';
              },
              sortable: false
              
          }, {
              field: "newPrice",
              title: "新标准单价(元)",
              headerAttributes: {"class": "k-grid-num"},
              attributes: {"class": "k-grid-num"},
              template:function(dataItem){
            	  if(dataItem.newPrice != null)
            		  return fNum2(dataItem.newPrice);
            	  else return '';
              },
              sortable: false
              
          }, {
              field: "changePersonName",
              title: "调价人",
              headerAttributes: {"class": "k-grid-text"},
              attributes: {"class": "k-grid-text"},
              sortable: false
              
          }
		  , {
              field: "changeDate",
              title: "调价日期",
              headerAttributes: {"class": "k-grid-equilong"},
              attributes: {"class": "k-grid-equilong"},
              sortable: false
              
          }
		  ],
		  
      	{
          sortable: {
              mode: "multiple",
              allowUnsort: true
          },resizable:true
      }, {
          serverSorting: true
      }, [{
              name: "添加",
              icon: "fa fa-plus",
              onclick: function (obj) {
                  quick_dialog("priceChange_add_dlg", "添加调价信息", "$!{rc.contextPath}/spare/priceChange/edit", 750, 350, obj);
              }
          },
          {
              name: "修改",
              icon: "fa fa-pencil",
              onclick: function (obj, grid) {
                  var row = grid.select();
                  if (null == row || row.length == 0) {
                      notify("请选择要修改的项", "warn");
                      return;
                  }
                  var data = grid.dataItem(row);
                  quick_dialog("priceChange_add_dlg", "修改调价信息", "$!{rc.contextPath}/spare/priceChange/edit?id=" + data.id, 750, 350, obj);
              }
          },
          {
              name: "删除",
              icon: "fa fa-remove",
              onclick: function (obj, grid) {
			     var row = grid.select();
	              if (null == row || row.length == 0) {
	                  notify("请选择要删除的项", "warn");
	                  return;
	              }
                  singleDelete(grid,"$!{rc.contextPath}/spare/priceChange/delete");
              }
          }
      ]);
		
    });

    /* zTree */
    var setting = {
    	data: {
    		simpleData: {enable: true}
          },
          callback: {
    			onClick: function(event, treeId, treeNode) {
    				  $('#spareCategoryId').val(treeNode.id);
    			 	 $('#treeNodeText').text(treeNode.name);
    			 	 $('#selectBlock').show();
    				 $('#queryBtn').click();
    			}
    		}
    };
  	var zNodes = [];  
	zNodes.push({id:"0", pId:"-1", name:"备件类别簇",open:true});   
  	#foreach($!{treeNode} in $!{treeDatas})
      	zNodes.push({id:$!{treeNode.id}, pId:$!{treeNode.parentId}, name:"$!{treeNode.categoryName}"});      
  	#end

  	$(document).ready(function(){
  		$.fn.zTree.init($("#geoAreaTree"), setting,zNodes);//.expandAll(true);
  	});
	
	function cancelLeftTreeSelected(){
		$.fn.zTree.init($("#geoAreaTree"), setting,zNodes);//.expandAll(true);
	}
</script>