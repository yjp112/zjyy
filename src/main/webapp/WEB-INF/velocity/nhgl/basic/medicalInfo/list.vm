<div class="ui-layout-center" id="subMain">
	<div class="ui-layout-center">
		<table id="medical_datalist" class="fn-hide"></table>
	</div>
	<div class="ui-layout-north">
		<div class="ui-module-name">#crumbs("$!menu.code",1)</div>
		<form id="medical_list_search" class="ui-form ui-form-search fn-clear">
			<div class="ui-form-search-left">
				<div class="ui-form-item">
		            <label class="ui-label">月份：</label>
		            <input id="monthKey" type="text" name="monthKey"  class="ui-input ui-input-small  Wdate"  onclick="WdatePicker({dateFmt:'yyyy-MM',maxDate:'%y-%M-%d'})" value="#date_format($!device.startTime,'yyyy-MM')"/>
				</div>
			</div>	
			<div class="ui-form-search-right">
					<button type="submit" id="subButton" class="btn btn-primary"><i class="iconfont icon-search"></i> 查&nbsp;询</button>
					<!--button type="button" id="subButton" class="btn btn-primary"><i class="iconfont"></i> 重&nbsp;置</button-->
			</div>
		</form>
	</div>
</div>
