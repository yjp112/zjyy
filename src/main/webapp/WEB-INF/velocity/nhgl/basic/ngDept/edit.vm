#if($_type)#else#set($_type="edit")#end
<form class="ui-form" id="platform_org_dept_$!{_type}_form" action="$!{rc.contextPath}/nhgl/basic/ngDept/$!{_type}" method="post">
	<input type="hidden"  name="department.id" value="$!{department.id}" />
	<fieldset>
		<div class="ui-form-item ">
			<label class="ui-label"><span class="ui-form-required">*</span>部门编码：</label>
			<input class="ui-input" type="text" name="department.code" value="$!{department.code}" data-rule="部门编码:required;" />
		</div>
		<div class="ui-form-item ">
			<label class="ui-label"><span class="ui-form-required">*</span>部门名称：</label>
			<input class="ui-input" type="text" name="department.name" value="$!{department.name}" data-rule="部门名称:required;" />
		</div>
		
		
		<div class="ui-form-item ">
			<label class="ui-label"><span class="ui-form-required">*</span>上级部门：</label>
			<input type="hidden" id="deptId" name="department.parent.id" value="$!{department.parent.id}" />
			<input readonly id="deptName"  class="ui-input ui-input-choose" type="text" name="department.parent.name" value="$!{department.parent.name}" data-rule="上级部门:required;" onclick="chooseDept('deptId','deptName','dept',null,'$!{department.id}')" />
			<!-- <a href="javascript:void(0)" id="plat_org_dept_select_btn" class="ui-input-icon" onclick="$.selectNHDepartment(this,{muilt:false,fill:{id:'#platform_org_dept_$!{_type}_form input[name=\'department.parent.id\']',name:'#platform_org_dept_$!{_type}_form input[name=\'department.parent.name\']'}})"><i class="iconfont icon-folder-open-alt"></i></a> -->
		</div>
		<div class="ui-form-item ">
			<label class="ui-label">部门人数：</label>
			<input class="ui-input" type="text" name="department.persons" value="$!{department.persons}" data-rule="length[~100]; persons"   data-rule-persons="[/^[0-9]*$/, '请输入整数']"/>
		</div>
		<div class="ui-form-item ">
			<label class="ui-label">部门面积：</label>
			<input class="ui-input" type="text" name="department.area" value="$!{department.area}" data-rule="length[~100]; area"    data-rule-area="[/^\d+(.\d{1,2})?$/,'请输入小数或整数']"/>
		</div>
		<div class="ui-form-item ui-form-item-textarea colspan2">
      		<label class="ui-label">备注:</label>
      		<textarea class="ui-textarea" name="department.description">$!{department.description}</textarea>
		</div>
	</fieldset>
</form>
