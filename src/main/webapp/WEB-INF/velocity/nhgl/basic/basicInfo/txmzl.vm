            				return str;
            				
            			}
            	    },
            		legend: {
            			x : 'right',
            	        y : 'top',
                        data:['用电量','特需门诊人数']
                    },
                    xAxis : [
                        {
                            type : 'category',
                            data : data.dataHour.split(',')
                        }
                    ],
                    yAxis : [
            			{
                            type : 'value',
                            name : '特需门诊人数',
                            axisLabel : {
                                formatter: '{value} 人数'
