  <script type="text/javascript">
  $(document).ready(function(){
  	var option2;
	option2 = {
		grid:{x:'120px'},
		title : {
        	        text: '$!{year}'+'年特需门诊人数及用电使用情况',
        	        x:'100'
        	    },
        tooltip : {
	        trigger: 'axis',
			formatter:function(params,ticket)
			{
				var str="";
				for(var i=0;i<params.length;i++){
					str = str + params[i][0]+" : "+params[i][2];
					if(params[i][0] == "用电量")
						str = str + " "+electric+"</br>";
					else
						str = str + " " + "人数</br>";
				}
				return str;
				
			}
	    },
		legend: {
			x : 'right',
	        y : 'top',
            data:['用电量','特需门诊人数']
        },
        xAxis : [
            {
                type : 'category',
                data : ['1月','2月','3月','4月','5月','6月','7月','8月','9月','10月','11月','12月']
            }
        ],
        yAxis : [
			{
                type : 'value',
                name : '特需门诊人数',
                axisLabel : {
                    formatter: '{value} 人数'
                }
            },
            {
                type : 'value',
                name : '用电量',
                axisLabel : {
                    formatter: '{value} kWh'
                }
            }
            
        ],
        series : [
    		{
                name:'用电量',
                type:'bar',
				yAxisIndex: 1,
                data:'$!mapElectric.dataTxMzl'.split(',')
            },
            {
                name:'特需门诊人数',
                type:'line',
                data:'$!mapElectric.dataTxMzlSubjectAmount'.split(',')
            }
        ]
    };
	initEcharts("mix2",option2,function onclickWeek(chart){chart.on('click', eConsole2);});
  });
  function eConsole2(param) {
  			$("#subTxMzlButton").attr("style","display: block;");
			var value = param.value;
			if(value == '0')
				return;
    		var first = param.name;
			var year = $("#year").val();
			var start = $("#start").val();
			first = first.substring(0,first.length-1);
			if(first < 10)
				start = year + "-0" + first;
			else
				start = year + "-" + first;
			var url = '';
			url = '$!{rc.contextPath}/basic/basicInfoXin/dayByMonth?start='+start;
    		chartMonthTxMzl(url,start);
		
      	}
  function chartMonthTxMzl(url,start){
  	var title = "";
	if(start.length == 4)
		title = start+'年特需门诊人数及用电使用情况';
	else if(start.length == 7)
		title = start.substring(0,4)+"年"+start.substring(5,7)+'月特需门诊人数及用电使用情况';
	$.ajax({
           type: "POST",
           url: url,
           data: "code=2",
           success: function(data){
		   		var option10 = {
            		grid:{x:'120px'},
            		title : {
                    	        text: title,
                    	        x:'100'
                    	    },
                    tooltip : {
            	        trigger: 'axis',
            			formatter:function(params,ticket)
            			{
            				var str="";
            				for(var i=0;i<params.length;i++){
            					str = str + params[i][0]+" : "+params[i][2];
            					if(params[i][0] == "用电量")
            						str = str + " "+electric+"</br>";
            					else
            						str = str + " " + "人数</br>";
            				}
            				return str;
            				
            			}
            	    },
            		legend: {
            			x : 'right',
            	        y : 'top',
                        data:['用电量','特需门诊人数']
                    },
                    xAxis : [
                        {
                            type : 'category',
                            data : data.dateString.split(',')
                        }
                    ],
                    yAxis : [
            			{
                            type : 'value',
                            name : '特需门诊人数',
                            axisLabel : {
                                formatter: '{value} 人数'
                            }
                        },
                        {
                            type : 'value',
                            name : '用电量',
                            axisLabel : {
                                formatter: '{value} kWh'
                            }
                        }
                        
                    ],
                    series : [
                		{
                            name:'用电量',
                            type:'bar',
            				yAxisIndex: 1,
                            data:data.data.split(',')
                        },
                        {
                            name:'特需门诊人数',
                            type:'line',
                            data:data.dataSubjectAmount.split(',')
                        }
                    ]
                };
				if(start.length > 4)
					initEcharts("mix2",option10,function onclickWeek(chart){chart.on('click', eConsole21);});
				else
					initEcharts("mix2",option10,function onclickWeek(chart){chart.on('click', eConsole2);});
				$("#txmzlMonth").attr("value",start);
		   }
        });
  }
  function eConsole21(param) {
