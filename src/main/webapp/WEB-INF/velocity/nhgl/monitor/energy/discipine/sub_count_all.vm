			    ##    data:['用能量']
			    ##},
			    xAxis : [
			        {
			            type : 'category',
			            data : '$!newlist.hour'.split(",")
			        }
			    ],
			    yAxis : [
			        {
			            type : 'value',
			            name : '用能量('+energy+')',
##			            axisLabel : {
