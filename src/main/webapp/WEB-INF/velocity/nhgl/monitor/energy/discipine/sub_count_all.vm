##			            },
			            splitLine : {show : true}
			        }
			    ],
			    series : [
			        {
			            name:'用能量',
			            type:'line',
			            data:'$!newlist.data'.split(",")
			        }
			    ]
			};
		initEcharts("mix$!{num}",option);
		var content="<tbody>";
        var first = "";
		var newData = '$!newlist.data';
		//var hour = '$!new.hour';//获取的日期
		for(var i=0;i<6;i++)
		{
			var firstLine = "";
			var scendLine = "";
			var thirdLine = "";
			var fourLine = "";
			if(newData.split(",").length>=(i+1))
				firstLine = newData.split(",")[i];
			if(newData.split(",").length>=(i+7))
				scendLine = newData.split(",")[i+6];
			if(newData.split(",").length>=(i+13))
				thirdLine = newData.split(",")[i+12];
			if(newData.split(",").length>=(i+19))
				fourLine = newData.split(",")[i+18];
			var first = first+"<tr><td class=nh-table-num>"+i+"点</td><td style=\"text-align:center\">"+firstLine+"</td><td class=nh-table-num>"+(i+6)+"点</td><td style=\"text-align:center\">"+scendLine+"</td><td class=nh-table-num>"+(i+12)+"点</td><td style=\"text-align:center\">"+thirdLine+"</td><td class=nh-table-num>"+(i+18)+"点</td><td style=\"text-align:center\">"+fourLine+"</td></tr>";
		}
		content = content+first+"</tbody>";
		var head="<thead><tr><td class=nh-table-num>时间</td><td class=nh-table-num>用能量("+energy+")</td><td class=nh-table-num>时间</td><td class=nh-table-num>用能量("+energy+")</td><td class=nh-table-num>时间</td><td class=nh-table-num>用能量("+energy+")</td><td class=nh-table-num>时间</td><td class=nh-table-num>用能量("+energy+")</td></tr></thead>";
		head = head+"</tr></thead>";
		$(".nh-table").html("").append(head).append(content);
	})
	$(".nh-grid").circular();
