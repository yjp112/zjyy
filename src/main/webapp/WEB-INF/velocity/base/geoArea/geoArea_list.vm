#parse("index/_header.vm")
</head>
<body>
  <div class="ui-layout-west" style="border-right:solid 1px #e1e5e6;" id="leftTreeWrap">
			<div class="ui-layout-north">
				<div class="k-header k-grid-toolbar" style="padding-left:10px;">地理区域</div>
			</div>
      <div class="ui-layout-center">
  		  <ul id="geoAreaTree" class="ztree"></ul>
      </div>
  </div>

  <div class="ui-layout-center" id="subMain">
    <div class="ui-layout-north">
    	<form class="ui-form" id='queryForm'>
    		<div class="ui-form-group" style="display:none" id='selectBlock2'>
    			<div class="ui-form-item ui-form-item-block">
    			  <label class="ui-label">您已选择：</label>
    				  <span class="ui-form-pick">
    					  <input id="treeId" type="hidden" name="treeId" value="$!{treeId}">
    					  <strong>地理区域：</strong><em id='treeNodeText'></em><i class="iconfont icon-remove-sign"></i>
    				  </span>
    			</div>
    		</div>	
        <table width="100%">
          <tr>
            <td>
              <table class="ui-search-table">
                <tr>
                  <td class="ui-search-name first">区域编码：</td>
                  <td class="ui-search-c">
                    <input name="areaCode" value="$!geoArea.areaCode" class="k-textbox" type="text">
                  </td>
                  <td class="ui-search-name">区域名称：</td>
                  <td class="ui-search-c">
                    <input  name="areaName" value="$!geoArea.areaName" class="k-textbox" type="text">
                  </td>
                </tr>
              </table>
            </td>
            <td width="150" valign="top" style="padding-top:4px;">
              <button type="submit" class="hc_btn k-primary" id="queryBtn"><i class="fa fa-search"></i>查询</button>
              <button type="reset" class="hc_btn" id="resetBtn" onclick="cancelLeftTreeSelected();"><i class="fa fa-refresh"></i>重置</button>
            </td>
            <td></td>
          </tr>
        </table>
    	</form>
    </div>
  	<div class="ui-layout-center">
  	  <div id="grid"></div> 
    </div>
  </div>
#parse("index/_footer.vm") 

<script type="text/javascript">
var menuCode='$!{menu.code}'
  var _iframe_layout, _left_layout, _inner_layout;
	$(document).ready(function(){
    _iframe_layout = $('body').layout({
      defaults: {
        resizable: false,
        closable: false,
        spacing_open: 5
      },
      west: {
        size: 0.18
      }
    });

    _left_layout = $("#leftTreeWrap").layout({
      defaults: {
        resizable: false,
        closable: false,
        spacing_open: 0
      }
    });

    _inner_layout = $("#subMain").layout({
      defaults: {
        resizable: false,
        closable: false,
        spacing_open: 0
      },
      center: {
          onresize_end: function () {
              var grid = $("#grid").data("kendoGrid");
              grid.resize();
          }
      }
    })

    $('#resetBtn').click(function(){
      $("#treeId").val('');  
      $("#queryForm :text").val('');  
    });

		$('.iconfont','.ui-form-pick').each(function(){
      $(this).click(function(){
      	$('#treeId').val('');
      	$('#selectBlock').hide();
        //$(this).parent().remove();
      })
    })
	
		//列表
    quick_datagrid("#grid", "#queryForm", "$!{rc.contextPath}/base/geoArea/list", [{
              field: "id",
              hidden: true
          }, {
              field: "areaCode",
              title: "区域编码",
              sortable: false,
              headerAttributes: {"class": "k-grid-text"},
              attributes: {"class": "k-grid-text"},
              template:"<a href=\"javascript:void(0)\" title=\"查看#: data.areaCode #的详细信息\" onclick=\"quick_dialog('geoArea_add_dlg','查看#:data.areaCode #的信息','$!{rc.contextPath}/base/geoArea/edit?viewOnly=true&id=#: data.id #',470, 330)\">#: data.areaCode #</a>",
              width: 150
          }, {
              field: "areaName",
              title: "区域名称",
              sortable: false,
              headerAttributes: {"class": "k-grid-text"},
    		  #*attributes: {"class": "k-grid-text"},*#
              attributes: {     
      		  	 title:"#: data.areaName==null? '':data.areaName #",
      			 "class": "k-grid-text k-grid-nowrap"
    		  },
              width: 150
          }, {
              field: "fullLevelName",
              title: "全称",
              sortable: false,
              headerAttributes: {"class": "k-grid-text"},
    		  #*attributes: {"class": "k-grid-text"},*#
              attributes: {     
      		  	 title:"#: data.fullLevelName==null? '':data.fullLevelName #",
      			 "class": "k-grid-text k-grid-nowrap"
    		  },
              width: 150
          }, {
              field: "areaTypeName",
              title: "区域类别",
              sortable: false,
              headerAttributes: {"class": "k-grid-text"},
              attributes: {     
      		  	 title:"#: data.areaTypeName==null? '':data.areaTypeName #",
      			 "class": "k-grid-text k-grid-nowrap"
    		  },
              width: 150
          }, {
              field: "remark",
              sortable: false,
              headerAttributes: {"class": "k-grid-text"},
              #*attributes: {"class": "k-grid-text"},*#
              attributes: {     
  				 title:"#: data.remark==null? '':data.remark #",
  				 "class": "k-grid-text k-grid-nowrap"
			   },
              title: "备注"
          }], 
      {
    	  resizable:true,
          sortable: {
              mode: "multiple",
              allowUnsort: true
          }
      }, {
          serverSorting: true
      }, [
      #kendo_datagrid_btns("GEOAREA")#end
      ]);
		
    });

    /* zTree */
    var setting = {
    	data: {
    		simpleData: {enable: true}
          },
          callback: {
    			onClick: function(event, treeId, treeNode) {
    				 $('#treeId').val(treeNode.id);
    			 	 $('#treeNodeText').text(treeNode.name);
    			 	 $('#selectBlock').show();
    				 $('#queryBtn').click();
    			}
    		}
    };
  	var zNodes = [];  

  	#foreach($!{treeNode} in $!{treeList})
      	zNodes.push({id:$!{treeNode.id}, pId:$!{treeNode.parentId}, name:"$!{treeNode.areaName}"});     
  	#end

  	$(document).ready(function(){
  		$.fn.zTree.init($("#geoAreaTree"), setting,zNodes);
  	});
	
	function cancelLeftTreeSelected(){
		$.fn.zTree.init($("#geoAreaTree"), setting,zNodes);
	}
</script>
</body>
</html>
