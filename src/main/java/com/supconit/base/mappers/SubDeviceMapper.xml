<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://hc.supconit.com/mybatis-3-mapper.dtd">

<mapper namespace="com.supconit.base.entities.SubDevice">

	<resultMap type="com.supconit.base.entities.SubDevice" id="SubDeviceResultMap">      
        <result property="id" column="ID" />
        <result property="deviceId" column="DEVICE_ID" />
        <result property="subDeviceCode" column="SUB_DEVICE_CODE" />
        <result property="subDeviceName" column="SUB_DEVICE_NAME" />
        <result property="subDeviceSpec" column="SUB_DEVICE_SPEC" />
        <result property="num" column="NUM" />
        <result property="remark" column="REMARK" />
	</resultMap>
	<sql id="TABLE_NAME" lang="velocity">SUB_DEVICE</sql>
	<sql id="SEQUENCE" lang="velocity">SELECT SEQ_<include refid="TABLE_NAME"/>.NEXTVAL FROM DUAL</sql>
	    <insert id="insert" parameterType="com.supconit.base.entities.SubDevice" 
		keyProperty="id" keyColumn="ID" 		lang="velocity" databaseId="oracle">
		<selectKey keyProperty="id" resultType="long" order="BEFORE">
			<include refid="SEQUENCE" />
		</selectKey>        
		<include refid="INSERT_SQL" />
	</insert>    
	<sql id="INSERT_SQL" lang="velocity">
		INSERT INTO <include refid="TABLE_NAME"/>
		(#if($_databaseId=='oracle') ID,#end		
			DEVICE_ID,
	        SUB_DEVICE_CODE,
	        SUB_DEVICE_NAME,
	        SUB_DEVICE_SPEC,
	        NUM,	
	        REMARK
		) VALUES (        
		 #if($_databaseId == 'oracle') @{_parameter.id,jdbcType=NUMERIC},#end
        #{deviceId,jdbcType=NUMERIC},
        #{subDeviceCode,jdbcType=VARCHAR},
        #{subDeviceName,jdbcType=VARCHAR},
        #{subDeviceSpec,jdbcType=VARCHAR},
        #{num,jdbcType=NUMERIC},
        #{remark,jdbcType=VARCHAR}		
		)	
	</sql>		 	        	
    <insert id="insert" parameterType="java.util.List" databaseId="sqlserver">
		INSERT INTO SUB_DEVICE(        
        DEVICE_ID,
        SUB_DEVICE_CODE,
        SUB_DEVICE_NAME,
        SUB_DEVICE_SPEC,
        NUM,
        REMARK
		) VALUES        
        <foreach collection="list" item="item" separator="," >  
		(
        #{item.deviceId,jdbcType=NUMERIC},
        #{item.subDeviceCode,jdbcType=VARCHAR},
        #{item.subDeviceName,jdbcType=VARCHAR},
        #{item.subDeviceSpec,jdbcType=VARCHAR},
        #{item.num,jdbcType=NUMERIC},
        #{item.remark,jdbcType=VARCHAR}		
		)	
     	</foreach>
	</insert>
    
    <delete id="deleteByDeviceId" parameterType="long">
        DELETE FROM SUB_DEVICE WHERE Device_ID =#{deviceId}
	</delete>


</mapper>